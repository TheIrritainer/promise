{
  "name": "streamcommon/promise",
  "description": "PHP-CLI promise implementation",
  "license": "BSD-3-Clause",
  "type": "library",
  "keywords": [
    "streamcommon",
    "php promise"
  ],
  "require": {
    "php": "^7.2",
    "ext-ds": "^1.2.8"
  },
  "require-dev": {
    "ext-swoole": "^4.2.13",
    "streamcommon/coding-standard": "^1.0.0",
    "malukenho/docheader": "^0.1.7",
    "phpstan/phpstan": "^0.11.1",
    "phpunit/phpunit": "^8.0",
    "php-coveralls/php-coveralls": "^2.1.0"
  },
  "suggest": {
    "ext-swoole": "Install extension(^4.2.13) for using PromiseA"
  },
  "autoload": {
    "psr-4": {
      "Streamcommon\\Promise\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Streamcommon\\Test\\Promise\\": "test/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "license-check": "docheader check lib/ test/ example/",
    "phpstan": "phpstan analyze -l max -c phpstan.neon ./lib ./example",
    "phpunit": "phpunit --colors=always",
    "phpunit-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "coveralls": "php-coveralls -v"
  }
}
